{
    "name": "cart-game",
    "version": "1.0.0",
    "description": "Реализация карточной игры, где нужно выбрать все пары карт.",
    "main": "index.js",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(js|jsx)": [
            "npm run lint:write",
            "git add"
        ]
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "format": "prettier --write .",
        "lint:js": "eslint .",
        "lint:css": "stylelint *.css",
        "lint:ts": "tsc --noEmit",
        "prepare": "husky install",
        "lint": "npm run lint:js && npm run lint:css",
        "dev": "webpack --mode development",
        "serve": "webpack serve --open --mode development --config dev/serve.config.js",
        "build": "webpack",
        "start": "webpack-dev-server --open"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dzum197/cart-game.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/dzum197/cart-game/issues"
    },
    "homepage": "https://github.com/dzum197/cart-game#readme",
    "dependencies": {
        "copy-webpack-plugin": "^11.0.0",
        "lodash": "^4.17.21",
        "save-dev": "^0.0.1-security",
        "source-map": "^0.7.4"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.195",
        "axios": "^1.3.5",
        "css-loader": "^6.7.3",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "filemanager-webpack-plugin": "^8.0.0",
        "html-webpack-plugin": "^5.5.1",
        "husky": "^8.0.3",
        "mini-css-extract-plugin": "^2.7.5",
        "postcss-loader": "^7.2.4",
        "postcss-preset-env": "^8.3.2",
        "prettier": "^2.8.7",
        "sass": "^1.62.0",
        "sass-loader": "^13.2.2",
        "source-map-loader": "^4.0.1",
        "style-loader": "^3.3.2",
        "stylelint": "^15.6.0",
        "stylelint-config-standard": "^33.0.0",
        "stylelint-prettier": "^3.0.0",
        "ts-loader": "^9.4.3",
        "typescript": "^5.0.4",
        "webpack": "^5.80.0",
        "webpack-cli": "^5.0.2",
        "webpack-dev-server": "^4.13.3"
    }
}
